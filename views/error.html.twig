{% extends "layout.html.twig" %}

{% block title %}Error!{% endblock %}

{% block content %}
<div class="row" id="errorPanel">
    <div class="col-xs-5">
        <img class="img-responsive pull-right" style="max-width:40%" src="{{ app.request.basepath }}/pictures/404-deadpool.png" alt="Error ghost"/>
    </div>
    <div class="col-xs-6">
        <h1>Whoops...<br><small>{{ message }}</small></h1>
    </div>
</div>
{% endblock %}