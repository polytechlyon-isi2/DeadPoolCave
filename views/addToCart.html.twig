{% extends "layout.html.twig" %}
{% block title %}Ajout au panier{% endblock %}

{% block content %}
  <div class="container" style="text-align:center">
    <h2> L'article {{ article.title }} à été ajouté à votre panier </h2><br/>
    <div class="row">
      <div class="col-md-3"></div>
        <div class="col-md-3">
          <a class="btn btn-lg btn-primary" href="{{ path('cart', { 'id': app.user.id }) }} ">
            <span class="glyphicon glyphicon-shopping-cart"> Voir votre panier</span>
          </a>
        </div>
        <div class="col-md-3">
          <a class="btn btn-lg btn-primary" href="{{ path('home') }} ">
            <span class="glyphicon glyphicon-home"> Accueil </span>
          </a>
        </div>
        <div class="col-md-3"></div>
      </div>
  </div>
  <br/>
{% endblock %}
