{% extends "layout.html.twig" %} {% block title %}Home{% endblock %} {% block content %}
<div class="row">
    <div class="col-md-6">
        <img class="img-responsive" style="max-height:15em" src="../web/pictures/deadpoolhome.jpg">
    </div>
    <div class="col-md-6"><img class="img-responsive" style="max-height:15em" src="../web/pictures/deadpoolhome2.jpg"></div>
</div>
<hr />

<!-- Carousel ================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>

    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img class="img-responsive" src="http://www.dcplanet.fr/wp-content/uploads/2015/06/DC-Universe-Sale.jpg" alt="First slide">

        </div>
        <div class="item">
            <img class="img-responsive" src="../web/pictures/deadpoolbabe.jpg" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Ne manquer pas nos offres spéciales</h1>

                    <p><a class="btn btn-lg btn-primary" href="{{ path('user_signup') }}" role="button">Inscrivez-vous</a></p>
                </div>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- /.carousel -->

<div class="container">



    <hr />

    <div class="row">
        <div class="col-md-3"><img class="img-responsive" style="max-height:10em" src="http://gazette-du-geek.fr/wp-content/uploads/2016/02/Deadpool-le-film-qui-te-fait-du-bien-.jpg"></div>
        <div class="col-md-9">
            <h2>Ils sont beau, ils sont chaud, ils sont tout neuf !!</h2>
            <h2>Jette un coup d'oeil aux derniers comics arrivé sur le site !</h2>
        </div>

    </div>
    <hr />

    <section class="row">
        {% for article in articles %}
        <a class="articleTitle" href="{{ path('article', { 'id': article.id }) }}">
            <article class="col-xs-12 col-sm-6 col-md-4">
                <div class="article thumbnail">
                    <img class="img-rounded" style="max-height:15em" src="{{article.img}}" />
                    <h2>{{ article.title }}</h2>
                </div>
            </article>
        </a>
        {% endfor %}
    </section>
</div>
{% endblock %}